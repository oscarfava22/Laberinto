<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:visibility="visible"
        tools:context=".configuracions">

        <Button
            android:id="@+id/buttonApagat"
            android:layout_width="568dp"
            android:layout_height="96dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="?attr/colorButtonNormal"
            tools:drawableLeft="@android:drawable/ic_lock_silent_mode"
            android:drawableTint="@android:color/background_dark"
            android:onClick="onClickButtonApagat"
            android:text="Prem per silenciar el volum"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23" />

        <Button
            android:id="@+id/button"
            android:layout_width="568dp"
            android:layout_height="96dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="?android:attr/colorButtonNormal"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:drawableTint="@android:color/background_dark"
            android:onClick="onClickButton"
            android:text="Prem per silenciar el volum"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23" />

        <Button
            android:id="@+id/canviNom"
            android:layout_width="568dp"
            android:layout_height="101dp"
            android:layout_marginBottom="124dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="?attr/colorButtonNormal"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:drawableTint="@android:color/background_dark"
            android:onClick="onClickButtonTwo"
            android:text="Canvia el nom d'usuari"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.15" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
